{
  "name": "devshop",
  "version": "1.1.0",
  "description": "Self-improving development shop using MCP and AI agents with modern service architecture",
  "main": "client/devshop-mcp.js",
  "type": "module",
  "scripts": {
    "start": "node client/devshop-mcp.js",
    "setup": "node client/devshop-mcp.js setup",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:verbose": "NODE_OPTIONS=--experimental-vm-modules jest --verbose",
    "test:integration": "node client/devshop-mcp.js test",
    "ba": "node client/devshop-mcp.js ba",
    "tl": "node client/devshop-mcp.js tl",
    "dev": "node client/devshop-mcp.js dev",
    "logs": "node client/devshop-mcp.js logs",
    "status": "node client/devshop-mcp.js status",
    "github-server": "bash scripts/start-github-server.sh",
    "github-server:stop": "docker stop devshop-github-server 2>/dev/null || true",
    "test:fastmcp": "node test-fastmcp-integration.js",
    "test:fastmcp:quick": "node test-fastmcp-integration.js quick",
    "fastmcp:server": "node servers/fastmcp-litellm-server.js",
    "fastmcp:container": "bash scripts/start-fastmcp-server.sh",
    "fastmcp:container:stop": "docker compose -f docker-compose.fastmcp.yml down",
    "fastmcp:container:logs": "docker compose -f docker-compose.fastmcp.yml logs -f",
    "test:security": "node test-container-security.js"
  },
  "bin": {
    "devshop": "./client/devshop-mcp.js"
  },
  "keywords": [
    "mcp",
    "ai",
    "development",
    "automation",
    "agents"
  ],
  "author": "DevShop",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.5",
    "@octokit/rest": "^20.0.2",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "dotenv": "^16.3.1",
    "fastmcp": "^3.15.2",
    "openai": "^4.28.4",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "zod": "^3.25.76"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@jest/globals": "^30.1.2",
    "jest": "^30.1.3",
    "tdd-guard-jest": "^0.1.1"
  }
}
